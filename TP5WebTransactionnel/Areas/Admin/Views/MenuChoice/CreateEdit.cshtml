@using TP5WebTransactionnel.Models;
@model MenuChoice
@{
    string textAction = @Resource.Ajouter;
    string formAction = "Create";
    if(Model != null)
    {
        textAction = @Resource.Modifier;
        formAction = "Edit";
    }

    ViewData["Title"] = textAction + @Resource.UnChoixMenu;

}
<div class="d-flex flex-column align-items-center">
    <h1><i class="fa fa-list"></i> @textAction  @Resource.UnChoixMenu</h1>
    <div class="w-75">
        <form asp-action="@formAction" method="post" enctype="multipart/form-data">
            <hr/>
            <div class="form-group row">
                    <label asp-for="Description" class="col-form-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            <hr />
            <div class="form-group row">
                <label for="uploadfile" class="col-form-label col-md-3">@Resource.Image</label>
                <div class="col-md-9">
                    <input type="file" id="uploadfile" name="uploadfile" accept=".jpg,.png,.gif" />
                    <div>
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input class="btn-primary btn" type="submit" value="@textAction" name="@formAction" />
            </div>
        </form>
    </div>
    <br/>
    <a asp-action="List">@Resource.RetournMenu</a>
    <br />

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
