@if (User.Identity.IsAuthenticated)
{
    <a class="nav-link text-light mx-2" asp-area="" asp-controller="Member" asp-action="Logout"><i class="fa fa-sign-out"></i>@Resource.SignOut (@User.Identity.Name)</a>
}
else
{
    <a class="nav-link text-light mx-2" asp-area="" asp-controller="Member" asp-action="Login"><i class="fa fa-sign-in"></i>@Resource.SignIn</a>
}